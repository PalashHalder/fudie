<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/cut_card_background"
    tools:context="bd.gov.ansarvdpbank.avubinfo.OfficeActivity">

    <include
        android:id="@+id/toolbar"
        layout="@layout/my_toolbar"
        />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="12dp"
        android:text=""
        android:textColor="@color/black"
        android:textSize="35sp"
        android:textStyle="bold" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/textView"
        android:layout_marginBottom="60dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="12dp"
                    android:layout_weight="1"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="6dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="16dp">


                        <TextView
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="ব্যবস্থাপনা কর্তৃপক্ষ"
                            android:textColor="#6f6f6f"
                            android:textSize="20sp"
                            android:textStyle="bold"/>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <androidx.cardview.widget.CardView
                    android:id="@+id/chairOffice"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="12dp"
                    android:layout_weight="1"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="6dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="16dp">


                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:layout_marginTop="12dp"
                            android:text="চেয়ারম্যান মহোদয়ের সচিবালয়\nআনসার-ভিডিপি উন্নয়ন ব্যাংক\n১৪, আউটার সার্কুলার রোড\nরাজারবাগ, ঢাকা-১২১৭\nফোনঃ ০০-০০০০ ০০০০"
                            android:textColor="#6f6f6f"
                            android:textSize="16sp" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <androidx.cardview.widget.CardView
                    android:id="@+id/mdOffice"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="12dp"
                    android:layout_weight="1"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="6dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="16dp">


                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAlignment="textStart"
                            android:layout_marginTop="12dp"
                            android:text="ব্যবস্থাপনা পরিচালক মহোদয়ের সচিবালয়\nআনসার-ভিডিপি উন্নয়ন ব্যাংক\n১৪, আউটার সার্কুলার রোড\nরাজারবাগ, ঢাকা-১২১৭\nফোনঃ ০০-০০০০ ০০০০"
                            android:textColor="#6f6f6f"
                            android:textSize="16sp"
                            android:gravity="start" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>
            </LinearLayout>



            <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <androidx.cardview.widget.CardView
                android:id="@+id/dmdOffice"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:layout_weight="1"
                app:cardCornerRadius="12dp"
                app:cardElevation="6dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="16dp">


                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAlignment="textStart"
                        android:layout_marginTop="12dp"
                        android:text="উপব্যবস্থাপনা পরিচালক মহোদয়ের সচিবালয়\nআনসার-ভিডিপি উন্নয়ন ব্যাংক\n১৪, আউটার সার্কুলার রোড\nরাজারবাগ, ঢাকা-১২১৭\nফোনঃ ০০-০০০০ ০০০০"
                        android:textColor="#6f6f6f"
                        android:textSize="16sp"
                        android:gravity="start" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>
        </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <androidx.cardview.widget.CardView
                    android:id="@+id/gmAdmin"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="12dp"
                    android:layout_weight="1"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="6dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="16dp">


                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAlignment="textStart"
                            android:layout_marginTop="12dp"
                            android:text="মহাব্যবস্থাপক প্রশাসন মহোদয়ের দপ্তর\nআনসার-ভিডিপি উন্নয়ন ব্যাংক\n১৪, আউটার সার্কুলার রোড\nরাজারবাগ, ঢাকা-১২১৭\nফোনঃ ০০-০০০০ ০০০০"
                            android:textColor="#6f6f6f"
                            android:textSize="16sp"
                            android:gravity="start" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <androidx.cardview.widget.CardView
                    android:id="@+id/gmOperation"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="12dp"
                    android:layout_weight="1"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="6dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="16dp">


                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAlignment="textStart"
                            android:layout_marginTop="12dp"
                            android:text="মহাব্যবস্থাপক অপারেশন মহোদয়ের দপ্তর\nআনসার-ভিডিপি উন্নয়ন ব্যাংক\n১৪, আউটার সার্কুলার রোড\nরাজারবাগ, ঢাকা-১২১৭\nফোনঃ ০০-০০০০ ০০০০"
                            android:textColor="#6f6f6f"
                            android:textSize="16sp"
                            android:gravity="start" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <androidx.cardview.widget.CardView
                    android:id="@+id/gmAudit"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="12dp"
                    android:layout_weight="1"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="6dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="16dp">


                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAlignment="textStart"
                            android:layout_marginTop="12dp"
                            android:text="মহাব্যবস্থাপক হিসাব ও নিরীক্ষা মহোদয়ের দপ্তর\nআনসার-ভিডিপি উন্নয়ন ব্যাংক\n১৪, আউটার সার্কুলার রোড\nরাজারবাগ, ঢাকা-১২১৭\nফোনঃ ০০-০০০০ ০০০০"
                            android:textColor="#6f6f6f"
                            android:textSize="16sp"
                            android:gravity="start" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>
            </LinearLayout>



        </LinearLayout>

    </ScrollView>

</RelativeLayout>