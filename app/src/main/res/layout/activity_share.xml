<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="bd.gov.ansarvdpbank.avubinfo.ShareActivity">

    <include
        android:id="@+id/toolbar"
        layout="@layout/my_toolbar"
        />

    <TextView
        android:id="@+id/bankShare"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="65dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dp"
        android:text="শেয়ার সংক্রান্ত সেবাসমূহ"
        android:textAppearance="@style/TextAppearance.AppCompat.Widget.PopupMenu.Header"
        android:textSize="20sp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/bankShare"
        android:layout_marginBottom="60dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/bankShareIntro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:visibility="gone"
                android:textStyle="bold"
                android:layout_marginBottom="5dp"
                android:layout_below="@id/bankShare"
                android:text="ভূমিকা:"
                android:textAppearance="@style/TextAppearance.AppCompat.Widget.PopupMenu.Header"
                android:textSize="16sp" />
            <TextView
                android:id="@+id/DescriptionIntro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginBottom="10dp"
                android:justificationMode="inter_word"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/bankShareParaOne"
                android:text="আনসার-ভিডিপি উন্নয়ন ব্যাংকের অনুমোদিত প্রারম্ভিক মূলধন ১০০(একশত) কোটি টাকা যা ধাপে ধাপে বৃদ্ধি পেয়ে বর্তমানে মূলধন ১০০০ (এক হাজার) কোটি টাকা, যার ২৫% গণপ্রজাতন্ত্রী বাংলাদেশ সরকার এবং ৭৫% বাংলাদেশ আনসার ও গ্রাম প্রতিরক্ষা বাহিনীর সদস্য-সদস্যা, আনসার ও ভিডিপি কর্মকর্তা এবং আনসার-ভিডিপি উন্নয়ন ব্যাংক কর্মকর্তাদের মধ্যে প্রতিটি ১০০ (একশত) টাকা মূল্যমানের শেয়ার বিক্রয়ের মাধ্যমে সংগ্রহ করার বিধান রয়েছে। বর্তমানে পরিশোধিত মূলধনের পরিমাণ ৪০০ কোটি টাকার মধ্যে আনসার ও গ্রাম প্রতিরক্ষা বাহিনীর সদস্যদের অংশ ৩০০ কোটি টাকা।"
                android:textAppearance="@style/TextAppearance.AppCompat.Widget.PopupMenu.Header"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/bankShareParaOne"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:textStyle="bold"
                android:layout_marginBottom="5dp"
                android:layout_below="@id/bankShare"
                android:text="শেয়ার আবেদন প্রাপ্তি ফরম:"
                android:textAppearance="@style/TextAppearance.AppCompat.Widget.PopupMenu.Header"
                android:textSize="16sp" />
            <TextView
                android:id="@+id/DescriptionOne"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginBottom="10dp"
                android:justificationMode="inter_word"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/bankShareParaOne"
                android:text="ব্যাংকের শেয়ার আবেদন নিকটবর্তী আনসার-ভিডিপ উন্নয়ন ব্যাংকের শাখাসমূহ, উপজেলা আনসার ও গ্রাম প্রতিরক্ষা বাহিনীর কার্যালয়, জেলা আনসার ও ভিডিপি কার্যালয়, আনসার-ভিডিপি উন্নয়ন ব্যাংকের প্রধান কার্যালয় এবং বাংলাদেশ আনসার ও ভিডিপি সদর দপ্তরে বিনামূল্যে পাওয়া যায়।"
                android:textAppearance="@style/TextAppearance.AppCompat.Widget.PopupMenu.Header"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/bankShareParaTwo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:textStyle="bold"
                android:layout_marginBottom="2dp"
                android:layout_below="@id/DescriptionOne"
                android:text="শেয়ার ক্রয়ের যোগ্যতা ও পরিমাণ:"
                android:textAppearance="@style/TextAppearance.AppCompat.Widget.PopupMenu.Header"
                android:textSize="16sp" />
            <TextView
                android:id="@+id/DescriptionTwo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginBottom="10dp"
                android:justificationMode="inter_word"
                android:layout_below="@id/bankShareParaTwo"
                android:text="কেবলমাত্র আনসার ও গ্রাম প্রতিরক্ষা বাহিনীর সংগঠনে কর্মরত কর্মকর্তা-কর্মচারী এবং অত্র ব্যাংকে কর্মরত কর্মকর্তা-কর্মচারীগণ তাঁদের চাহিদা মোতাবেক যে কোন সংখ্যক শেয়ার ক্রয় করতে পারবেন।"
                android:textAppearance="@style/TextAppearance.AppCompat.Widget.PopupMenu.Header"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/bankShareParaThree"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:textStyle="bold"
                android:layout_marginBottom="2dp"
                android:layout_below="@id/DescriptionTwo"
                android:text="শেয়ারের লভ্যাংশ (Dividend) প্রদান:"
                android:textAppearance="@style/TextAppearance.AppCompat.Widget.PopupMenu.Header"
                android:textSize="16sp" />
            <TextView
                android:id="@+id/DescriptionThree"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginBottom="10dp"
                android:justificationMode="inter_word"
                android:layout_below="@id/bankShareParaThree"
                android:text="আনসার-ভিডিপি উন্নয়ন ব্যাংক একটি লাভজনক প্রতিষ্ঠান। প্রতি আর্থিক বছর শেষে অত্র ব্যাংক শেয়ার হোল্ডারদের মধ্যে অনুমোদিত হারে লভ্যাংশ (Dividend) প্রদান করে আসছে। শেয়ার হোল্ডারগণ তাঁর নিকটবর্তী আনসার-ভিডিপি উন্নয়ন ব্যাংকের শাখাসমূহ হতে শেয়ারের লভ্যাংশ (Dividend) গ্রহন করতে পারেন।"
                android:textAppearance="@style/TextAppearance.AppCompat.Widget.PopupMenu.Header"
                android:textSize="14sp" />


            <TextView
                android:id="@+id/bankShareParaFour"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:textStyle="bold"
                android:layout_marginBottom="2dp"
                android:layout_below="@id/DescriptionThree"
                android:text="অনলাইন শেয়ার ম্যানেজমেন্ট সিস্টেম"
                android:textAppearance="@style/TextAppearance.AppCompat.Widget.PopupMenu.Header"
                android:textSize="16sp" />
            <TextView
                android:id="@+id/DescriptionFour"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginBottom="10dp"
                android:justificationMode="inter_word"
                android:layout_below="@id/bankShareParaFour"
                android:text="আনসার-ভিডিপি উন্নয়ন ব্যাংক একটি লাভজনক প্রতিষ্ঠান। প্রতি আর্থিক বছর শেষে অত্র ব্যাংক শেয়ার হোল্ডারদের মধ্যে অনুমোদিত হারে লভ্যাংশ (Dividend) প্রদান করে আসছে। শেয়ার হোল্ডারগণ তাঁর নিকটবর্তী আনসার-ভিডিপি উন্নয়ন ব্যাংকের শাখাসমূহ হতে শেয়ারের লভ্যাংশ (Dividend) গ্রহন করতে পারেন।"
                android:textAppearance="@style/TextAppearance.AppCompat.Widget.PopupMenu.Header"
                android:textSize="14sp" />


            <TextView
                android:id="@+id/bankShareParaFive"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:textStyle="bold"
                android:layout_marginBottom="2dp"
                android:layout_below="@id/DescriptionThree"
                android:text="শেয়ার বিষয়ক বিস্তারিত তথ্য:"
                android:textAppearance="@style/TextAppearance.AppCompat.Widget.PopupMenu.Header"
                android:textSize="16sp" />
            <TextView
                android:id="@+id/DescriptionFive"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginBottom="10dp"
                android:justificationMode="inter_word"
                android:layout_below="@id/bankShareParaFour"
                android:text="নিচের লিংকে ক্লিক করে অনলাইন শেয়ার ম্যানেজমেন্ট সফটওয়্যারে যেতে হবে। তারপর Login মেনু থেকে ‍Shareholder অপশনে গিয়ে আপনার রেজি: নম্বর ও পিন নম্বর ব্যবহার করে আপনার প্রোফাইলে প্রবেশ করতে হবে। প্রবেশ করার পর আপনার শেয়ার সংক্রান্ত যাবতীয় তথ্য পেয়ে যাবেন।\n লিংক: https://‍share.ansarvdpbank.gov.bd "
                android:textAppearance="@style/TextAppearance.AppCompat.Widget.PopupMenu.Header"
                android:textSize="14sp" />
        </LinearLayout>
    </ScrollView>


    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/botNav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bottom_nav_back"
        app:menu="@menu/bottom_menu"/>

</RelativeLayout>