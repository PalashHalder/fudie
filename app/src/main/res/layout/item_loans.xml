<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    app:cardCornerRadius="10dp"
    android:padding="5dp"
    app:cardElevation="1dp"
    android:layout_height="wrap_content"
    >


    <RelativeLayout
        android:id="@+id/loanView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/product_img_url"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/logo"
            app:civ_border_width="2dp"
            android:layout_margin="8dp"
            app:civ_border_color="#2196F3"/>

        <TextView
            android:includeFontPadding="false"
            android:layout_marginTop="35dp"
            android:layout_toEndOf="@id/product_img_url"
            android:id="@+id/productName"
            android:textSize="18sp"
            android:textColor="#2196F3"
            android:textStyle="bold"
            android:text="Palash"
            android:maxLines="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/product_img_url" />

        <TextView
            android:layout_below="@id/productName"
            android:includeFontPadding="false"
            android:layout_marginTop="15dp"
            android:layout_toEndOf="@id/product_img_url"
            android:id="@+id/productStatus"
            android:textSize="14sp"
            android:textColor="#633B52"
            android:textStyle="normal"
            android:text="Halder"
            android:maxLines="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/product_img_url" />

        <ImageView
            android:id="@+id/nextArrowImage"
            android:visibility="gone"
            android:src="@drawable/ic_baseline_arrow_forward_ios_24"
            android:layout_margin="8dp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>

